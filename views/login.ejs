<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
      body { font-family: system-ui, Arial, sans-serif; margin: 2rem; }
      .card { max-width: 560px; margin: 0 auto; padding: 2rem; border: 1px solid #ddd; border-radius: 8px; }
      .row { display: flex; flex-direction: column; gap: 0.5rem; margin-top: 0.5rem; }
      input, button { padding: 0.6rem; border-radius: 6px; border: 1px solid #bbb; }
      .actions { margin-top: 1rem; display: flex; gap: 0.75rem; flex-wrap: wrap; }
      .btn { padding: 0.6rem 1rem; border-radius: 6px; border: 1px solid #999; background: #f8f8f8; text-decoration: none; color: #111; }
      .btn-primary { background: #4285F4; color: #fff; border-color: #4285F4; }
      .btn-fb { background: #1877F2; color: #fff; border-color: #1877F2; }
      .error { color: #d93025; margin: 0.5rem 0; }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Login</h1>
      <% if (error) { %><p class="error">Error: <%= error %></p><% } %>
      <form method="POST" action="/login" class="row">
        <label>Email</label>
        <input type="email" name="email" required />
        <label>Password</label>
        <input type="password" name="password" required />
        <button type="submit">Login</button>
      </form>
      <div class="actions">
        <a class="btn btn-primary" href="/auth/google">Login with Google</a>
        <a class="btn btn-fb" href="/auth/facebook">Login with Facebook</a>
        <a class="btn" href="/register">Go to Register</a>
        <a class="btn" href="/">Home</a>
      </div>
    </div>
    <script>
      if (window.trustedTypes && window.trustedTypes.createPolicy) {
        try {
          window.trustedTypes.createPolicy('default', {
            createHTML: (s) => s,
            createScript: (s) => s,
            createScriptURL: (s) => s
          });
        } catch (e) {}
      }
    </script>
  </body>
  </html>

